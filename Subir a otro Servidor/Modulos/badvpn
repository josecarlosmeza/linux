#!/bin/bash
# BadVPN udpgw — compatível com AlmaLinux (systemd) e binário/screen
clear
BADVPN_BIN=""
[[ -x /usr/local/bin/badvpn-udpgw ]] && BADVPN_BIN="/usr/local/bin/badvpn-udpgw"
[[ -z "$BADVPN_BIN" ]] && [[ -x /bin/badvpn-udpgw ]] && BADVPN_BIN="/bin/badvpn-udpgw"
USE_SYSTEMD=
command -v systemctl &>/dev/null && systemctl list-unit-files badvpn-udpgw.service &>/dev/null && USE_SYSTEMD=1

bad_running() {
	[[ -n "$USE_SYSTEMD" ]] && systemctl is-active --quiet badvpn-udpgw 2>/dev/null && return 0
	[[ $(ps x | grep "udpvpn" | grep -v grep | wc -l) != '0' ]] && return 0
	[[ $(ps x | grep "badvpn-udpgw" | grep -v grep | wc -l) != '0' ]] && return 0
	return 1
}

fun_bar () {
comando[0]="$1"
comando[1]="$2"
 (
[[ -e $HOME/fim ]] && rm $HOME/fim
${comando[0]} -y > /dev/null 2>&1
${comando[1]} -y > /dev/null 2>&1
touch $HOME/fim
 ) > /dev/null 2>&1 &
 tput civis
echo -ne "\033[1;33m["
while true; do
   for((i=0; i<18; i++)); do
   echo -ne "\033[1;31m#"
   sleep 0.1s
   done
   [[ -e $HOME/fim ]] && rm $HOME/fim && break
   echo -e "\033[1;33m]"
   sleep 1s
   tput cuu1
   tput dl1
   echo -ne "\033[1;33m["
done
echo -e "\033[1;33m]\033[1;37m -\033[1;32m OK !\033[1;37m"
tput cnorm
}

fun_udp1 () {
    if [[ -n "$USE_SYSTEMD" ]] && systemctl start badvpn-udpgw 2>/dev/null; then
        clear
        echo -e "\033[1;32mIniciando BadVPN (systemd)... \033[0m\n"
        systemctl start badvpn-udpgw 2>/dev/null
        echo -e "\n  \033[1;32mBadVPN activo.\033[0m"
        sleep 3
        menu
        return
    fi
    if [[ -n "$BADVPN_BIN" ]]; then
    clear
    echo -e "\033[1;32mIniciando BadVPN... \033[0m\n"
    fun_udpon () {
        screen -dmS udpvpn $BADVPN_BIN --listen-addr 127.0.0.1:7300 --max-clients 1000 --max-connections-for-client 10
        [[ $(grep -wc "udpvpn" /etc/autostart 2>/dev/null) = '0' ]] && {
		    echo -e "ps x | grep 'udpvpn' | grep -v 'grep' && echo 'ON' || screen -dmS udpvpn $BADVPN_BIN --listen-addr 127.0.0.1:7300 --max-clients 1000 --max-connections-for-client 10" >> /etc/autostart
		} || {
		    sed -i '/udpvpn/d' /etc/autostart
		    echo -e "ps x | grep 'udpvpn' | grep -v 'grep' && echo 'ON' || screen -dmS udpvpn $BADVPN_BIN --listen-addr 127.0.0.1:7300 --max-clients 1000 --max-connections-for-client 10" >> /etc/autostart
		}
        sleep 1
    }
    fun_bar 'fun_udpon'
    echo -e "\n  \033[1;32mBADVPN ATIVO !\033[0m"
    sleep 3
    menu
    else
        clear
        echo -e "\033[1;32mINSTALANDO O BADVPN !\033[0m\n"
        echo -e "\033[1;33mEm AlmaLinux/RHEL execute o script: badvpn-almalinux\033[0m"
        echo -e "\033[1;33mOu tentando download do binário...\033[0m\n"
	    inst_udp () {
	        cd $HOME
            wget -q https://www.dropbox.com/s/tgkxdwb03r7w59r/badvpn-udpgw -O /tmp/badvpn-udpgw 2>/dev/null && mv -f /tmp/badvpn-udpgw /bin/badvpn-udpgw && chmod 755 /bin/badvpn-udpgw
	   }
	   fun_bar 'inst_udp'
	   [[ -x /bin/badvpn-udpgw ]] && BADVPN_BIN="/bin/badvpn-udpgw"
	   if [[ -n "$BADVPN_BIN" ]]; then
       fun_udpon2 () {
           screen -dmS udpvpn $BADVPN_BIN --listen-addr 127.0.0.1:7300 --max-clients 1000 --max-connections-for-client 10
           [[ $(grep -wc "udpvpn" /etc/autostart 2>/dev/null) = '0' ]] && {
		       echo -e "ps x | grep 'udpvpn' | grep -v 'grep' && echo 'ON' || screen -dmS udpvpn $BADVPN_BIN --listen-addr 127.0.0.1:7300 --max-clients 1000 --max-connections-for-client 10" >> /etc/autostart
		   } || {
		       sed -i '/udpvpn/d' /etc/autostart
		       echo -e "ps x | grep 'udpvpn' | grep -v 'grep' && echo 'ON' || screen -dmS udpvpn $BADVPN_BIN --listen-addr 127.0.0.1:7300 --max-clients 1000 --max-connections-for-client 10" >> /etc/autostart
		   }
           sleep 1
       }
       fun_bar 'fun_udpon2'
       fi
       echo -e "\n\033[1;32mBadVPN activo.\033[0m"
       sleep 3
       menu
    fi
}

fun_udp2 () {
    clear
    echo -e "\n\033[1;32mDeteniendo BadVPN...\033[0m\n"
    fun_stopbad () {
        sleep 1
        [[ -n "$USE_SYSTEMD" ]] && systemctl stop badvpn-udpgw 2>/dev/null
        screen -r -S "udpvpn" -X quit 2>/dev/null
        screen -wipe 1>/dev/null 2>/dev/null
        [[ $(grep -wc "udpvpn" /etc/autostart 2>/dev/null) != '0' ]] && sed -i '/udpvpn/d' /etc/autostart
        sleep 1
    }
    fun_bar 'fun_stopbad'
    echo -e "\n  \033[1;31mBadVPN detenido.\033[0m"
    sleep 3
    menu
}
bad_running && fun_udp2 || fun_udp1
